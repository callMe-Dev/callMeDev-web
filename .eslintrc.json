{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"eqeqeq": "error",
		"semi": ["error", "never"],
		"jsx-quotes": ["warn", "prefer-single"],
		"quotes": ["warn", "single"],
		"no-proto": "warn",
		"no-redeclare": "error",
		"capitalized-comments": "warn",
		"indent": "off"
	}
}
